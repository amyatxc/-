/* pages/record/record.wxss */
.box {
	margin: 30rpx;
	padding: 40rpx;
	border-radius: 20rpx;
	border: 5rpx solid #ccc;
}

.header {
	display: flex;
	align-items: center;
}

.header .icon {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}

.record {
	margin-left: 180rpx;
	color: #ccc;
	font-weight: bold;
}

.header .name {
	font-size: 40rpx;
	font-weight: bold;
	margin-left: 40rpx;
}

.text {
	margin-top: 30rpx;
	margin-bottom: 30rpx;
}

.amt {
	font-size: 28rpx;
}