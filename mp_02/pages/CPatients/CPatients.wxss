/* pages/CPatients/CPatients.wxss */
.container {
  padding: 20rpx;
}

input, picker, button {
  margin-bottom: 20rpx;
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box; /* 让内边距和边框不会撑开元素 */
}

.radio-label {
  display: inline-block; /* 设置为内联块级元素，让两个label在同一行显示 */
  margin-right: 100px; /* 调整单选按钮之间的间距 */
}

.page-section {
	margin-bottom: 25rpx;
}

button {
  line-height: 80rpx;
}